            <li>
              <%= link_to teachers_users_path do %>
                &nbsp;<span class="sidebar-nav-mini-hide lion lion loulight"><%= t "all_student" %></span>
              <% end %>
            </li>
          </ul>
        </li>
        <li>
          <a href="javascript:void(0)" class="sidebar-nav-menu hasmi">
            <i class="fa fa-angle-left sidebar-nav-indicator sidebar-nav-mini-hide"></i><i class="fa fa-columns sidebar-nav-icon"></i>
            &nbsp;<span class="sidebar-nav-mini-hide lion"><%= t "majors" %></span></a>
