<%= form_with url: statistic_results_by_major_path, method: :get do %>
  <div class="col-md-3 pull-right">
    <div class="form-group">
      <div class="icon-addon addon-lg">
        <%= select_tag :aspirations, options_for_select(Register.aspirations.map{|k, v| [t("#{k}"), k]}
          .unshift([t("all_aspirations"), nil])), class: "form-control" %>
        <label for="department" class="fa fa-asterisk" rel="tooltip"></label>
      </div>
    </div>
  </div>

  <div class="col-md-2 pull-right">
    <div class="form-group">
      <div class="icon-addon addon-lg">
        <%= select_tag :department, options_for_select(@departments.map{|s| [s.name, s.id]}
          .unshift([t("departments"), nil])), class: "form-control" %>
        <label for="department" class="fa fa-cubes" rel="tooltip"></label>
      </div>
    </div>
  </div>

  <div class="col-md-5 pull-right">
    <div class="form-group">
      <div class="icon-addon addon-lg">
        <div id="search-by-subject">
          <%= select_tag :schools, options_for_select(@schools.map{|s| [s.name, s.id]}
            .unshift([t("schools"), nil])), class: "form-control" %>
        </div>
        <label for="subjects" class="fa fa-building" rel="tooltip"></label>
      </div>
    </div>
  </div>

  <%= button_tag :submit, class: "display-none", id: "btn-seach" %>
<% end %>
